{% extends 'base.html.twig' %}

{% block title %}Hello from quiz!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <div>
        <form action="" method="get">
            <input type="text" name="search" placeholder="Search">
            <input type="submit" value="Submit">
        </form>
    </div>

    <div class="example-wrapper">
        <h1>Hello ! âœ…</h1>

        <ul>
            {% for quiz in quizes %}
                <li>
                    <a href="{{ path('quizById',{'id': quiz.id}) }}">{{ quiz.title }}</a>
                    <p>{{ quiz.description }}</p>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
