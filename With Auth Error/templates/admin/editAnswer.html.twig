{% extends 'layout/base.html.twig' %}

{% block title %}{{ answer.content }}{% endblock %}

{% block body %}
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('admin') }}">Admin</a></li>
                <li class="breadcrumb-item"><a
                            href="{{ path('adminEditQuestion', {'id' : answer.question.id}) }}">
                        Back to question</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Edit answer</li>
            </ol>
        </nav>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Edit Answer</div>

                    <div class="card-body">
                        <form action="" class="form-horizontal" method="POST">

                            <div class="form-group">
                                <label for="content">Answer content</label>
                                <div class="col-xs-8">
                                    <input type="text" id="content" name="content" class="form-control"
                                           placeholder="Answer content" value="{{ answer.content }}">
                                </div>

                                <div>Is correct?</div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" id="correct" name="correct"
                                           value="0" {{ (answer.correct == false) ? 'checked' : '' }}>
                                    <label class="custom-control-label" for="correct">No</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" id="incorrect" name="correct"
                                           value="1" {{ (answer.correct == true) ? 'checked' : '' }}>
                                    <label class="custom-control-label" for="incorrect">Yes</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-offset-2 col-xs-10">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
